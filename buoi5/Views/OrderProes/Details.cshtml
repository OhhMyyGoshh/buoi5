@model buoi5.Models.OrderPro

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Đơn Hàng</h2>

<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt class="control-label col-md-2">
            <b>Ngày Đặt Hàng</b>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DateOrder)
        </dd>

        <dt class="control-label col-md-2">
            <b>Địa chỉ Giao Hàng</b>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.AddressDeliverry)
        </dd>

        <dt class="control-label col-md-2">
            <b>Khách Hàng</b>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Customer.NameCus)
        </dd>
    </dl>
    <h2>Chi tiết đơn hàng</h2>
    <table class="order-table">
        <thead>
            <tr>
                <th>Sản phẩm</th>
                <th>Số lượng</th>
                <th>Đơn giá</th>
                <th>Thành tiền</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderDetails)
            {
                <tr>
                    <td>@item.IDProduct</td>
                    <td>@item.Quantity</td>
                    <td>@item.UnitPrice</td>
                    <td>@(item.Quantity * item.UnitPrice)</td>
                </tr>
            }
        </tbody>
    </table>
        <style>
            .order-table {
                border-collapse: collapse;
                width: 100%;
                border: 1px solid #ddd; /* Thêm viền xung quanh bảng */
            }

                .order-table th, .order-table td {
                    border: 1px solid #ddd;
                    padding: 8px;
                    text-align: left;
                }
        </style>
</div>


<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
