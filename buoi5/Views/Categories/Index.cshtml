@model IEnumerable<buoi5.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>LOẠI SẢN PHẨM</h1>
<p>
    @Html.ActionLink("Thêm loại sản phẩm mới", "Create")
</p>
<table class="table table-bordered" style="border-width:thick">
    <tr>
        <th> Mã Loại </th>
        <th> Tên Loại </th>
        
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td> @Html.DisplayFor(modelItem => item.IDCate) </td>
            <td> @Html.DisplayFor(modelItem => item.NameCate) </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.IDCate }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.IDCate }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.IDCate })
            </td>
        </tr>
    }

</table>
