@model IEnumerable<buoi5.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Thêm Khách hàng mới</h1>
<p>
    @Html.ActionLink("Thêm sản phẩm mới", "Create")
</p>
<table class="table table-bordered" style="border-width:thick">
    <tr>
        <th> Tên Khách hàng </th>
        <th> Phone </th>
        <th> Email </th>
        
       
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td> @Html.DisplayFor(modelItem => item.NameCus) </td>
            <td> @Html.DisplayFor(modelItem => item.PhoneCus) </td>
            <td> @Html.DisplayFor(modelItem => item.EmailCus) </td>
           
             
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.IDCus}) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.IDCus }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.IDCus })
            </td>
        </tr>
    }

</table>
